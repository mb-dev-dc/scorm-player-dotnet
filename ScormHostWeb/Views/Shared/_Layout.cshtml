<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScormHostWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ScormHostWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg professional-navbar">
            <div class="container-fluid navbar-container">
                <a class="navbar-brand brand-logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="brand-content">
                        <i class="fas fa-graduation-cap brand-icon"></i>
                        <span class="brand-text">
                            <span class="brand-primary">Edu</span><span class="brand-secondary">SCORM</span>
                        </span>
                    </div>
                </a>

                <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="toggler-icon"></span>
                    <span class="toggler-icon"></span>
                    <span class="toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav nav-menu me-auto">
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home nav-icon"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-area="" asp-controller="Course" asp-action="Index">
                                <i class="fas fa-book nav-icon"></i>
                                <span>Course Library</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-area="" asp-controller="Course" asp-action="Upload">
                                <i class="fas fa-cloud-upload-alt nav-icon"></i>
                                <span>Upload Course</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom nav-link-disabled" href="#" tabindex="-1">
                                <i class="fas fa-chart-bar nav-icon"></i>
                                <span>Analytics</span>
                                <small class="coming-soon">Soon</small>
                            </a>
                        </li>
                    </ul>

                    <div class="navbar-actions">
                        <div class="nav-status">
                            <span class="status-indicator">
                                <i class="fas fa-circle status-dot"></i>
                                <span class="status-text">System Online</span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="main-content">
        @RenderBody()
    </main>

    <footer class="professional-footer">
        <div class="footer-container">
            <div class="footer-content">
                <div class="footer-brand">
                    <i class="fas fa-graduation-cap footer-icon"></i>
                    <span class="footer-text">EduSCORM</span>
                </div>
                <div class="footer-info">
                    <span>&copy; 2025 EduSCORM Learning Platform</span>
                    <span class="footer-separator">•</span>
                    <span>SCORM-Compliant LMS</span>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
