@model IEnumerable<ScormHostWeb.Models.ScormCourse>
@{
    ViewData["Title"] = "Course Management";
}

<div class="container">
    <div class="course-management">
    <div class="course-header">
        <div class="header-content">
            <div class="title-section">
                <h1 class="course-main-title">
                    <i class="fas fa-graduation-cap me-3"></i>
                    SCORM Course Library
                </h1>
                <p class="course-subtitle">Manage your learning content packages</p>
            </div>
            <div class="action-section">
                <a asp-action="Upload" class="btn btn-upload btn-primary-action">
                    <i class="fas fa-cloud-upload-alt me-2"></i>
                    <span>Upload Course</span>
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="notification notification-success">
            <div class="notification-content">
                <i class="fas fa-check-circle notification-icon"></i>
                <div class="notification-text">
                    <strong>Success!</strong>
                    <span>@TempData["SuccessMessage"]</span>
                </div>
                <button type="button" class="notification-close" onclick="this.parentElement.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="notification notification-error">
            <div class="notification-content">
                <i class="fas fa-exclamation-circle notification-icon"></i>
                <div class="notification-text">
                    <strong>Error!</strong>
                    <span>@TempData["ErrorMessage"]</span>
                </div>
                <button type="button" class="notification-close" onclick="this.parentElement.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    }

    <div class="course-grid">
        @if (Model.Any())
        {
            @foreach (var course in Model)
            {
                <div class="course-card" data-course-id="@course.CourseId">
                    <div class="course-card-header">
                        <div class="course-title-section">
                            <h3 class="course-card-title">@course.Title</h3>
                            <span class="course-version-badge">SCORM @course.Version</span>
                        </div>
                        <div class="course-status">
                            <span class="status-badge status-active">
                                <i class="fas fa-check-circle me-1"></i>Active
                            </span>
                        </div>
                    </div>
                    <div class="course-card-body">
                        <div class="course-info-grid">
                            <div class="info-item">
                                <div class="info-label">Course ID</div>
                                <div class="info-value">@course.CourseId.ToString().Substring(0, 8)...</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Package Path</div>
                                <div class="info-value" title="@course.PackagePath">
                                    <i class="fas fa-folder me-1"></i>@System.IO.Path.GetFileName(course.PackagePath)
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(course.LaunchScoId))
                            {
                                <div class="info-item">
                                    <div class="info-label">Launch SCO</div>
                                    <div class="info-value">@course.LaunchScoId</div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="course-card-footer">
                        <div class="card-actions">
                            @if (ViewBag.UseLaunchTestUrl)
                            {
                                <a href="@Url.Content($"~/scorm/launchTest?courseId={course.CourseId}")" class="btn btn-action btn-preview">
                                    <i class="fas fa-eye"></i>
                                    <span>Preview (test mode)</span>
                                </a>
                            }
                            
                            <button type="button" class="btn btn-action btn-delete" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                    onclick="setDeleteCourse('@course.CourseId', '@course.Title')" title="Delete Course">
                                <i class="fas fa-trash-alt"></i>
                                <span>Delete</span>
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-content">
                    <div class="empty-state-icon">
                        <i class="fas fa-cloud-upload-alt"></i>
                    </div>
                    <h3 class="empty-state-title">No Courses Yet</h3>
                    <p class="empty-state-description">
                        Start building your course library by uploading your first SCORM package.
                        Supported formats include SCORM 1.2 and SCORM 2004.
                    </p>
                    <a asp-action="Upload" class="btn btn-upload btn-primary-action">
                        <i class="fas fa-plus me-2"></i>
                        <span>Upload Your First Course</span>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the course <strong id="courseToDelete"></strong>?</p>
                <p class="text-danger">This action cannot be undone and will remove all associated files.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete Course</button>
                </form>
            </div>
        </div>
    </div>
    </div>
</div>

@section Scripts {
    <script>
        function setDeleteCourse(courseId, courseTitle) {
            document.getElementById('courseToDelete').textContent = courseTitle;
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Course")/' + courseId;
        }
    </script>
}